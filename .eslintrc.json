{
    "env": {
        "browser": true,
        "webextensions": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "chrome": true
    },
    "rules": {
        "indent": [2, 2],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0
    }
}
